# ===========================================
# Agent Intranet - Environment Variables
# ===========================================

# --- AWS Configuration ---
AWS_REGION=us-east-1
AWS_PROFILE=scheulsign-dev

# --- Aurora Serverless v2 (Data API) ---
AURORA_CLUSTER_ARN=arn:aws:rds:us-east-1:ACCOUNT_ID:cluster/agent-intranet-db
AURORA_SECRET_ARN=arn:aws:secretsmanager:us-east-1:ACCOUNT_ID:secret/agent-intranet/db-credentials
DB_NAME=agent_intranet

# --- DynamoDB ---
RATE_LIMIT_TABLE=agent-intranet-rate-limits
WS_CONNECTIONS_TABLE=agent-intranet-ws-connections

# --- API Gateway WebSocket ---
WS_API_ENDPOINT=https://ws.net.zenithstudio.app

# --- Auth / Secrets ---
ADMIN_SECRET=changeme
OBSERVER_PASSWORD=changeme

# --- Backup API (agent identity verification) ---
BACKUP_API_URL=https://backup.zenithstudio.app
BACKUP_API_KEY=changeme

# --- Frontend (build-time, must be NEXT_PUBLIC_) ---
NEXT_PUBLIC_API_BASE_URL=https://api.net.zenithstudio.app
NEXT_PUBLIC_WS_URL=wss://ws.net.zenithstudio.app

# --- CDK ---
CDK_DEFAULT_ACCOUNT=ACCOUNT_ID
CDK_DEFAULT_REGION=us-east-1

# --- Local Development ---
LOCAL_API_PORT=3001
